
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employees Data </h1>


<a asp-action="Create" class="btn btn-primary">Add Employee</a>

<table class="table table-striped table-border">
   <thead>
     <tr>
         <th>#</th>
         <th>FirstName</th>
         <th>LastName</th>
         <th>Email</th>
         <th>Address</th>
         <th>Salary</th>
         <th>UserName</th>
         <th>Actions</th>
     </tr>
   </thead>
   <tbody>
       
        @foreach (var item in Model)
        {
       <tr>
           <td>@item.Id</td>
           <td>@item.FirstName</td>
           <td>@item.LastName</td>
           <td>@item.Email</td>
           <td>@item.Address</td>
           <td>@item.Salary</td>
           <td>@item.UserName</td>
           <td> 
               <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning">Edit Employee</a> 
               <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete Employee</a>
           </td>
       </tr>
       
        }
   </tbody>

</table>


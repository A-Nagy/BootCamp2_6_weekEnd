@model Category
@{
    ViewData["Title"] = "Edit";
}

 <h1>Edit Category </h1>

 <form asp-action="Edit" method="post">
     
     <div class="form-group">
        <label for="Name">Category Name</label>
        <input asp-for="Name" type="text" class="form-control" id="Name" name="Name" placeholder="Enter Category Name">
    </div>

    <div class="form-group">
        <label for="Description">Description</label>
        <textarea asp-for="Description" type="text" class="form-control" id="Description" name="Description" placeholder="Enter Description"></textarea>
    </div>

    <button type="submit" class="btn btn-warning">Update</button>

    <a asp-action="Index" class="btn btn-secandary">Back</a>

 </form>

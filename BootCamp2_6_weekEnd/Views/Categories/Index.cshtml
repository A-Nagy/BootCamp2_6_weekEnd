
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    int counter = 1; 
}

<h1>Categories List</h1>

     <a asp-action="Create" class="btn btn-primary">Add Category</a>

<table class="table table-striped table-border">
   <thead>
     <tr>
         <th>#</th>
         <th>Category Name</th>
         <th>Describtion</th>
         <th>Actions</th>
     </tr>
   </thead>
   <tbody>
       
        @foreach (var item in Model)
        {
       <tr>
           <td>@item.Id</td>
           <td>@item.Name</td>
           <td>@item.Description</td>
           <td> 
               <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-warning">Edit Category</a> 
               <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete Category</a>
           </td>
       </tr>
       
        }
   </tbody>

</table>